        app:layout_constraintBottom_toBottomOf="@+id/ibNumberSeven"
        app:layout_constraintEnd_toStartOf="@+id/ibNumberNine"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ibNumberSeven"
        app:layout_constraintTop_toTopOf="@+id/ibNumberSeven"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/ibNumberNine"
        style="@style/buttonStyle"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/ibNumberEight"
        app:layout_constraintEnd_toStartOf="@+id/ibDiv"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ibNumberEight"
        app:layout_constraintTop_toTopOf="@+id/ibNumberEight"
